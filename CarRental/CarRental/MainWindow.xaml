<Window x:Class="CarRental.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarRental"
        mc:Ignorable="d"
        Title="Главное окно" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid Style="{StaticResource Back}">
        <StackPanel>
            <TextBlock HorizontalAlignment="Center" Margin="55" FontSize="24" Text="Авторизация"/>
            <WrapPanel HorizontalAlignment="Center">
                <StackPanel>
                    <Label Content="Логин"/>
                    <Label Content="Пароль"/>
                </StackPanel>
                <StackPanel>
                    <TextBox x:Name="tbLogin"/>
                    <PasswordBox x:Name="pbPassword"/>
                </StackPanel>
            </WrapPanel>
            <Button x:Name="btnEnter" HorizontalAlignment="Center" Margin="50" Content="Вход" Click="Enter_Click"/>
        </StackPanel>
    </Grid>
</Window>
